<?xml version="1.0" encoding="utf-8"?>


<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    >


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp"
        >

        <ImageView
            android:id="@+id/pet_image"
            android:layout_width="120dp"
            android:layout_height="100dp"
            android:scaleType="centerCrop"
            tools:srcCompat="@tools:sample/avatars[3]" />

        <TextView
            android:id="@+id/pet_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/pet_image"
            android:textAllCaps="true"
            android:layout_centerHorizontal="true"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            tools:text="Vicky" />


        <TextView
            android:id="@+id/pet_species"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/pet_name"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            tools:text="Cat" />

        <TextView
            android:id="@+id/pet_breed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/pet_name"
           android:layout_toRightOf="@id/pet_species"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:visibility="visible"
            tools:text=" (Bulldog)" />

        <TextView
            android:id="@+id/pet_gender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/pet_species"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            tools:text="Female" />

        <TextView
            android:id="@+id/pet_age"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/pet_gender"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            tools:text="8" />

        <TextView
            android:id="@+id/pet_age_suffix"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/pet_gender"
            android:layout_toRightOf="@id/pet_age"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            tools:text=" years old" />

        <TextView
            android:id="@+id/pet_arrived_suffix"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/pet_age"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            tools:text="Arrived: "
            />

        <TextView
            android:id="@+id/pet_arrived"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/pet_age"
            android:layout_toRightOf="@id/pet_arrived_suffix"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            tools:text="23.9.1986"
            />





    </RelativeLayout>

</android.support.v7.widget.CardView>