<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">


<android.support.v7.widget.CardView

    android:layout_width="wrap_content"
    android:layout_height="wrap_content">


    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="8dp"
            android:scaleType="centerCrop"
            tools:srcCompat="@tools:sample/avatars[3]" />

        <TextView
            android:id="@+id/textView_Name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/imageView"
            android:textAllCaps="true"
            android:layout_centerHorizontal="true"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            tools:text="Vicky" />


        <TextView
            android:id="@+id/textView_Species"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textView_Name"
            android:layout_alignLeft="@id/imageView"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            tools:text="Cat" />

        <TextView
            android:id="@+id/textView_Breed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textView_Name"
           android:layout_toRightOf="@id/textView_Species"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:visibility="gone"
            tools:text=" (Bulldog)" />

        <TextView
            android:id="@+id/textView_Gender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textView_Species"
            android:layout_alignLeft="@id/imageView"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            tools:text="Female" />

        <TextView
            android:id="@+id/textView_Age"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textView_Gender"
            android:layout_alignLeft="@id/imageView"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            tools:text="8" />

        <TextView
            android:id="@+id/textView_Age_Suffix"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textView_Gender"
            android:layout_toRightOf="@id/textView_Age"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            tools:text=" years old" />








    </RelativeLayout>

</android.support.v7.widget.CardView>
</LinearLayout>